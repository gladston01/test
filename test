def alertsFile = "${env.WORKSPACE}/alerts.txt"

// Write the alerts to a file
writeFile file: alertsFile, text: alertsSection

// Upload the file to Slack
slackUploadFile(
    channel: env.SLACK_CHANNEL,
    filePath: alertsFile,
    initialComment: """
        *Test Alert Notification*: :rotating_light:
        *Test Start Time:* ${startTime}
        *Test End Time:* ${endTime}
        The alerts are too large to send as a message. Please check the attached file.
    """
)
